<div class="container pt-4">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <h2>Créer un gossip</h2>
        <% if @gossip.errors.any? %>
            <div class="alert alert-danger text-center" role="alert">
                <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
                <ul>
                    <% @gossip.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_tag url_for(action: 'create'), method: "post" do %>
            <%= invisible_captcha %>
            <%= label_tag 'Titre'%>
            <%= text_field_tag :title, @gossip.title, class: "w-100" %>
            <br /><br />
            <div class="d-flex align-items-center" title="Vous pouvez en ajouter plusieurs en maintenant CTRL enfoncé">
                <%= label_tag 'Tags' %>
                <%=select_tag "tags", options_from_collection_for_select(@all_tags, "id", "title"), multiple: true, class: "mx-4" %>
            </div>
            <br />
            <%= label_tag 'Contenu' %>
            <%= text_area_tag :content, @gossip.content, rows:"10", class: "w-100" %>
            <br /> <br />
            <%= submit_tag "Valider", class: "btn btn-primary"  %>
        <% end %>
    </div>
  </div>
</div>
